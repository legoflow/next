{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env BUILD_MODE=develop lf-engine dev",
    "dev": "cross-env BUILD_MODE=develop lf-engine dev",
    "build:test": "cross-env BUILD_MODE=test lf-engine build --disableSourceMap",
    "build:production": "cross-env BUILD_MODE=production lf-engine build --disableSourceMap",
    "build:dll": "lf-engine dll -m vue,vue-router,vuex -o vendor",
    "format:check": "eslint --ext .js,.ts,.vue src",
    "format:fix": "eslint --ext .js,.ts,.vue src --fix"
  },
  "dependencies": {
    "vue": "^3.2.0",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@vue/babel-plugin-transform-vue-jsx": "^1.2.1",
    "@vue/compiler-sfc": "^3.2.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.5.0",
    "legoflow-engine": "^3.1.3",
    "lint-staged": "^11.1.2",
    "vue-loader": "^16.5.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "yorkie": "^2.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@vue/babel-plugin-transform-vue-jsx",
      ["@babel/plugin-transform-runtime", { "corejs": 3 }]
    ]
  },
  "postcss": {
    "stage": 0,
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": ["node_modules", "dist"],
    "rules": {
      "vue/script-setup-uses-vars": "error"
    },
    "globals": {
      "defineProps": "readonly",
      "defineEmits": "readonly",
      "defineExpose": "readonly",
      "withDefaults": "readonly"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,vue}": [
      "npm run format:check"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "Android >= 4.4",
    "iOS >= 9.0"
  ]
}

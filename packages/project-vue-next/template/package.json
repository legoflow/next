{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env BUILD_MODE=develop lf-engine dev",
    "dev": "cross-env BUILD_MODE=develop lf-engine dev",
    "build:test": "cross-env BUILD_MODE=test lf-engine build --disableSourceMap",
    "build:production": "cross-env BUILD_MODE=production lf-engine build --disableSourceMap",
    "build:dll": "lf-engine dll -m vue,vue-router,vuex -o vendor",
    "lint:check": "eslint --ext .js,.ts,.vue src",
    "lint:fix": "eslint --ext .js,.ts,.vue src --fix"
  },
  "dependencies": {
    "raven-js": "^3.27.2",
    "vue": "^3.0.5",
    "vue-router": "^4.0.1",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@vue/babel-plugin-transform-vue-jsx": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^4.3.8",
    "legoflow-engine": "^3.1.3",
    "lint-staged": "^10.5.3",
    "vue-loader": "^16.1.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@vue/babel-plugin-transform-vue-jsx",
      ["@babel/plugin-transform-runtime", { "corejs": 3 }]
    ]
  },
  "postcss": {
    "stage": 0,
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": ["node_modules", "dist"]
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,vue}": [
      "npm run lint:check"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "android >= 4",
    "iOS 8"
  ]
}

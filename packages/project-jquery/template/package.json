{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "lf-engine dev",
    "dev": "lf-engine dev",
    "build": "lf-engine build",
    "lint:check": "eslint",
    "lint:fix": "eslint --ext .js,.ts src --fix"
  },
  "dependencies": {
      "jquery": "^3.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "art-template": "^4.13.2",
    "art-template-loader": "^1.4.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "legoflow-engine": "^3.0.0-rc.1",
    "lint-staged": "^10.2.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      ["@babel/plugin-transform-runtime", { "corejs": 2 }]
    ]
  },
  "postcss": {
    "stage": 0,
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "standard"
    ],
    "plugins": [],
    "globals": {
      "Promise": true,
      "process": true
    },
    "ignorePatterns": ["node_modules", "dist"]
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "npm run lint:check"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "android >= 4",
    "iOS 8"
  ]
}
